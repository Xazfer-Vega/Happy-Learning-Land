<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainScreenFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name" />
    <Button
        android:id="@+id/btnRobot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_robot"/>
    <Button
        android:id="@+id/btnShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_shop"/>
    <Button
        android:id="@+id/btnRecicler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_recicle"/>
    <Button
        android:id="@+id/btnLetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_letters"/>
    <Button
        android:id="@+id/btnAlimentacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_alimentacion"/>
    <Button
        android:id="@+id/btnTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task"/>

</LinearLayout>