<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdePastel"
    tools:context=".AlimentacionFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Contenedor de Monedas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="3">

                <!-- Contenedor de Inicio -->
                <ImageView
                    android:id="@+id/btnInicio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_inicio">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <!-- Espacio en blanco -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="3">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/container_coins">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/coin"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp">

                        </ImageView>

                        <TextView
                            android:id="@+id/coins"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginEnd="20dp"
                            android:textSize="30sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="@string/coins">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Espacio en blanco -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="3">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- Contenedor de configuraciÃ³n -->
                    <ImageView
                        android:id="@+id/instrucciones"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_settings">

                    </ImageView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Contenedor Superior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <!-- Contenedor de barra de salud -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2">

                </LinearLayout>

                <!-- Contenedor de personaje -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/containerCharacter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ImageView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:text="@string/drinks" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:text="@string/food" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Contenedor principal de alimentos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="3">

            <!-- Contenedor de bebidas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1">

                <!-- Contenedor de fila 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <!-- Contenedor de bebida 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnAgua"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/agua_simple">

                        </ImageView>

                    </LinearLayout>

                    <!-- Contenedor de bebida 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnAguaLimon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/agua_limon">

                        </ImageView>

                    </LinearLayout>

                    <!-- Contenedor de bebida 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnAguaNaranja"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/agua_naranja">

                        </ImageView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Contenedor de fila 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <!-- Contenedor de bebida 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnJugoNaranja"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/jugo_naranja">

                        </ImageView>

                    </LinearLayout>

                    <!-- Contenedor de bebida 5 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnLeche"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/leche">

                        </ImageView>

                    </LinearLayout>

                    <!-- Contenedor de bebida 6 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnLecheChocolate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/leche_cafe">

                        </ImageView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Contenedor de fila 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <!-- Contenedor de bebida 7 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnRefresco"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/refresco">

                        </ImageView>

                    </LinearLayout>

                    <!-- Contenedor de bebida 8 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnRefrescoCola"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/refresco_cola">

                        </ImageView>

                    </LinearLayout>

                    <!-- Contenedor de bebida 9 Vacio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Contenedor de alimentos sÃ³lidos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1">

                <!-- Contenedor de fila 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1">

                    <!-- Contenedor de alimento sÃ³lido 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnVerdura"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/verduras">

                        </ImageView>

                    </LinearLayout>

                    <!-- Contenedor de alimento sÃ³lido 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnFruta"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/frutas">

                        </ImageView>

                    </LinearLayout>

                    <!-- Contenedor de alimento sÃ³lido 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnHuevo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/huevos">

                        </ImageView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Contenedor de fila 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <!-- Contenedor de alimento sÃ³lido 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnPescado"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pescado">

                        </ImageView>

                    </LinearLayout>

                    <!-- Contenedor de alimento sÃ³lido 5 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnPasta"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pasta">

                        </ImageView>

                    </LinearLayout>

                    <!-- Contenedor de alimento sÃ³lido 6 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnSandwich"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/sandwich">

                        </ImageView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Contenedor de fila 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <!-- Contenedor de alimento sÃ³lido 7 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnPizza"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pizza">

                        </ImageView>

                    </LinearLayout>

                    <!-- Contenedor de alimento sÃ³lido 8 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnPastel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pastel">

                        </ImageView>

                    </LinearLayout>

                    <!-- Contenedor de alimento sÃ³lido 9 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnGalletas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/galletas">

                        </ImageView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>